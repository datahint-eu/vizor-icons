<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Vizor.Icons.Demo</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/icons/bootstrap/svg" Match="NavLinkMatch.All">
                <BootstrapSvgIcon Icon="BootstrapSvgIcon.Bootstrap" CssClass="me-2" /> Bootstrap SVG
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/icons/bootstrap/styling" Match="NavLinkMatch.All">
                <BootstrapSvgIcon Icon="BootstrapSvgIcon.Bootstrap" CssClass="me-2" /> Bootstrap Styling
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/icons/tabler/svg" Match="NavLinkMatch.All">
                <TablerSvgIcon Icon="TablerSvgIcon.BrandTabler" CssClass="me-2" /> Tabler SVG
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
